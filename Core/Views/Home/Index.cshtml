    <script>
        var calendar;
        $(function () {
            $(".dateOnly").on("keypress keyup blur", function (event) {
                event.preventDefault();
            });
            $("#StartDate").datetimepicker({
                format: "YYYY/MM/DD hh:mm:ss",
                locale: "zh-tw"
            });
            $("#EndDate").datetimepicker({
                format: "YYYY/MM/DD hh:mm:ss",
                locale: "zh-tw"
            });
            Date.prototype.yyyymmdd = function () {
                var mm = this.getMonth() + 1;
                var dd = this.getDate();

                return [this.getFullYear(),
                (mm > 9 ? '' : '0') + mm,
                (dd > 9 ? '' : '0') + dd
                ].join('-');
            };
            InvestigateCalendar();
        })
        function clear() {

        }
        function reset() {
            calendar.destroy();
            InvestigateCalendar();
        }
        function postData(url, data,type) {
            return fetch(url,
                {
                    body: data,
                    cache: 'no-cache',
                    credentials: 'same-origin',
                    headers: {
                        'content-type': 'application/x-www-form-urlencoded'
                    },
                    method: type,
                    mode: 'same-origin',
                    redirect: 'follow',
                    referrer: 'no-referrer'
                })
                .then(response => response.json());
        }
        function SubmitForm() {
            let err = '';
            let StartDate = $('#StartDate').data('date');
            if (StartDate === '' || StartDate === null) {
                err += '請選擇開始日期!!\n';
            }
            let EndDate = $('#EndDate').data('date');
            if (EndDate === '' || EndDate === null) {
                err += '請選擇結束日期!!\n';
            }
            let CalendarTitle = $('#CalendatTitle').val();
            if (CalendarTitle === '' || CalendarTitle === null) {
                err += '請輸入標題!!\n';
            }
            let Content = $('#Content').val();
            if (Content === '' || Content === null) {
                err += '請輸入內容!!\n';
            }
            if (err !== '') {
                alert(err);
            } else {
                postData('../Home/Insert', $("#CalendarForm").serialize(),'POST'
                ).then(function (res) {
                    if (res.success) {
                        alert("新增成功!");
                        reset();
                    } else {
                        alert(`儲存失敗!! 錯誤訊息:${res.msg}`);
                    }
                }).catch(error => console.error(error));
            }
        }
        function InvestigateCalendar() {
            var date = new Date();
            //document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            calendar = new FullCalendar.Calendar(calendarEl, {
                plugins: ['interaction', 'dayGrid', 'timeGrid', 'list'],
                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listMonth'
                },
                buttonText: {
                    today: "今天",
                    dayGridMonth: "月",
                    timeGridWeek: "周",
                    timeGridDay: "天",
                    listMonth: "清單",
                },
                locale: 'zh-tw',
                defaultDate: date.yyyymmdd(),
                eventLimit: true,
                navLinks: true, // can click day/week names to navigate views
                businessHours: true, // display business hours
                editable: true,
                events: {                    
                    url: '../Home/Date',
                    method: 'Get',
                    dataType: 'json',
                    failure: function () {
                        alert('取得資料錯誤!!!!');
                    }
                },
                eventDrop: function (info) {
                    alert(info.event.title + " was dropped on " + info.event.start + info.event.id);

                    if (!confirm("確定改變時間嗎?")) {
                        info.revert();
                    } else {
                        postData('../Home/Edit', "SerID=" + info.event.id + "&StartDate=" + info.event.start.toISOString(),'Patch'
                        ).then(function (res) {
                            if (res.success) {
                                alert("修改成功!");                                
                            } else {
                                alert(`修改失敗!! 錯誤訊息:${res.msg}`);
                            }
                        }).catch(error => console.error(error));                        
                    }
                },
                eventClick: function (info) {
                    alert(info.event.id)
                    if (!confirm("確定要刪除嗎?")) {
                        info.revert();
                    } else {
                        postData('../Home/Delete', "id=" + info.event.id,'Delete'
                        ).then(function (res) {
                            if (res.success) {
                                alert("刪除成功!");
                                info.event.remove();
                            } else {
                                alert(`刪除失敗!! 錯誤訊息:${res.msg}`);
                            }
                        }).catch(error => console.error(error));                        
                    }                    
                }
                //events: [
                //    {
                //        title: 'Business Lunch',
                //        start: '2020-02-03T13:00:00',
                //        constraint: 'businessHours'
                //    },
                //    {
                //        title: 'Meeting',
                //        start: '2020-02-13T11:00:00',
                //        constraint: 'availableForMeeting', // defined below
                //        color: '#257e4a'
                //    },
                //    {
